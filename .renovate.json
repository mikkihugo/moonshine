{
    "$schema": "https://docs.renovatebot.com/renovate-schema.json",
    "extends": [
        "config:recommended",
        ":dependencyDashboard",
        ":semanticPrefixFixDepsChoreOthers",
        ":ignoreUnstable",
        "group:monorepos",
        "group:recommended"
    ],
    "schedule": [
        "before 4am on Monday"
    ],
    "timezone": "UTC",
    "labels": [
        "dependencies"
    ],
    "assignees": [
        "@mhugo"
    ],
    "reviewers": [
        "@mhugo"
    ],
    "packageRules": [
        {
            "matchPackagePatterns": [
                "*"
            ],
            "matchUpdateTypes": [
                "minor",
                "patch"
            ],
            "groupName": "all non-major dependencies",
            "groupSlug": "all-minor-patch"
        },
        {
            "matchPackagePatterns": [
                "rust",
                "cargo"
            ],
            "enabled": false
        }
    ],
    "vulnerabilityAlerts": {
        "enabled": true
    },
    "lockFileMaintenance": {
        "enabled": true
    }
}