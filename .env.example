# Environment variables template
# Copy this file to .env and fill in your values

# AI Provider API Keys (optional - for AI enhancement features)
# OPENAI_API_KEY=your_openai_api_key_here
# ANTHROPIC_API_KEY=your_anthropic_api_key_here
# GEMINI_API_KEY=your_gemini_api_key_here

# Moon repo configuration
MOON_CACHE_DIR=.moon/cache
MOON_OUTPUT_DIR=.moon/out

# Development settings
RUST_BACKTRACE=1
RUST_LOG=moon_shine=debug

# WASM development
WASM_PACK_CACHE=.wasm-pack-cache

# Testing
TEST_THREADS=4
CARGO_TEST_TIMEOUT=300

# Performance profiling (optional)
# PERF_RECORD_ARGS=--call-graph dwarf
# FLAMEGRAPH_ARGS=--flamechart

# CI/CD settings
CI=false
GITHUB_ACTIONS=false

# Database connections (if applicable)
# DATABASE_URL=postgresql://localhost/moonshine

# External service URLs (if applicable)
# REDIS_URL=redis://localhost:6379
# METRICS_ENDPOINT=http://localhost:9090